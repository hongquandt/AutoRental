<Window x:Class="AutoRental.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trang chủ - Đề xuất xe" Height="500" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Đề xuất xe hôm nay" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <!-- Không còn ảnh xe -->
            <TextBlock Text="{Binding SuggestedCar.CarModel}" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SuggestedCar.Seats, StringFormat='Số chỗ: {0}'}" />
            <TextBlock Text="{Binding SuggestedCar.PricePerDay, StringFormat='Giá: {0:N0} VNĐ/ngày'}"/>
            <TextBlock Text="{Binding SuggestedCar.LicensePlate, StringFormat='Biển số: {0}'}" TextWrapping="Wrap" Width="300"/>
            <TextBlock Text="{Binding TodayWeather.Condition, StringFormat='Thời tiết: {0}'}" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding TodayWeather.Temperature, StringFormat='Nhiệt độ: {0}°C'}"/>
            <TextBlock Text="{Binding TodayWeather.Humidity, StringFormat='Độ ẩm: {0}%'}"/>
            <TextBlock Text="{Binding TodayWeather.WindSpeed, StringFormat='Gió: {0} m/s'}"/>
            <TextBlock Text="{Binding TodayWeather.Description}"/>
            <Button Content="Book xe" Width="120" Height="40" Margin="0,20,0,0" Click="BookCar_Click"/>
        </StackPanel>
    </Grid>
</Window> 