<Window x:Class="AutoRental.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản trị viên - AutoRental" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#f4f6fb" FontFamily="Segoe UI">
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="32" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="txtAdminWelcome" FontSize="22" FontWeight="Bold" Foreground="#1976d2" Margin="0,0,0,24" HorizontalAlignment="Center"/>
                <Button x:Name="btnLogout" Content="Đăng xuất" Width="120" Height="35" Background="#e53935" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 