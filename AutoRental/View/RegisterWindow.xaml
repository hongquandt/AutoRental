<Window x:Class="AutoRental.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutoRental"
        Title="Đăng ký" Height="520" Width="400" Background="#f4f6fb" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="16" Padding="32" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Width="280" HorizontalAlignment="Center">
                <TextBlock Text="Đăng ký tài khoản" FontSize="26" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,24" HorizontalAlignment="Center"/>
                <TextBlock Text="Username" Margin="0,0,0,4"/>
                <TextBox x:Name="txtUsername" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="32" Margin="0,0,0,12" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9"/>
                <TextBlock Text="Full Name" Margin="0,0,0,4"/>
                <TextBox x:Name="txtFullName" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Height="32" Margin="0,0,0,12" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9"/>
                <TextBlock Text="Phone Number" Margin="0,0,0,4"/>
                <TextBox x:Name="txtPhoneNumber" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Height="32" Margin="0,0,0,12" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9"/>
                <TextBlock Text="Email" Margin="0,0,0,4"/>
                <TextBox x:Name="txtEmail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="32" Margin="0,0,0,12" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9"/>
                <TextBlock Text="Mật khẩu" Margin="0,0,0,4"/>
                <PasswordBox x:Name="txtPassword" Height="32" Margin="0,0,0,20" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9" KeyDown="txtPassword_KeyDown"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="12" Margin="0,0,0,16" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                <Button x:Name="btnRegister" Content="ĐĂNG KÝ" Height="44" Background="#1976d2" Foreground="White" FontWeight="Bold" FontSize="16" BorderThickness="0" Cursor="Hand" Click="btnRegister_Click" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 