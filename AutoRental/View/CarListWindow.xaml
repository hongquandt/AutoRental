<Window x:Class="AutoRental.CarListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách xe" Height="600" Width="950" WindowStartupLocation="CenterScreen" Background="#f4f6fb" FontFamily="Segoe UI">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="#f9f9f9"/>
            <Setter Property="AlternatingRowBackground" Value="#e3eaf2"/>
            <Setter Property="BorderBrush" Value="#b0bec5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#2d3a4a"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1976d2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="36"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1976d2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="24" Margin="20">
            <StackPanel>
                <TextBlock Text="Danh sách xe" FontSize="26" FontWeight="Bold" Foreground="#1976d2" Margin="0,0,0,18" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" HorizontalAlignment="Center">
                    <TextBox x:Name="txtSearch" Width="220" Height="32" Margin="0,0,10,0" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9" FontSize="14"/>
                    <ComboBox x:Name="cbBrand" Width="180" Height="32" Margin="0,0,10,0" FontSize="14"/>
                    <Button Content="Tìm kiếm" Height="32" Width="100" Background="#1976d2" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnSearch_Click"/>
                </StackPanel>
                <DataGrid x:Name="dgCars" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0" IsReadOnly="True" SelectionMode="Single" MinHeight="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên xe" Binding="{Binding CarModel}" Width="*"/>
                        <DataGridTextColumn Header="Biển số" Binding="{Binding LicensePlate}" Width="120"/>
                        <DataGridTextColumn Header="Hãng" Binding="{Binding Brand.BrandName}" Width="120"/>
                        <DataGridTextColumn Header="Số chỗ" Binding="{Binding Seats}" Width="60"/>
                        <DataGridTextColumn Header="Giá/ngày" Binding="{Binding PricePerDay}" Width="100"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Đặt xe" Click="BookCar_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window> 