<Window x:Class="AutoRental.CarListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách xe" Height="700" Width="950" WindowStartupLocation="CenterScreen" Background="#f4f6fb" FontFamily="Segoe UI">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="#f9f9f9"/>
            <Setter Property="AlternatingRowBackground" Value="#e3eaf2"/>
            <Setter Property="BorderBrush" Value="#b0bec5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#2d3a4a"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1976d2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#1565c0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1976d2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565c0"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.18"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0d47a1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="#b0bec5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#f9f9f9"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="#b0bec5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#f9f9f9"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="20" Padding="28" Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.13"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">
                    <!-- Logo AUTORENTAL -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="AUTO" FontWeight="Bold" FontSize="28" Foreground="#222"/>
                        <TextBlock Text="RENTAL" FontWeight="Bold" FontSize="28" Foreground="#1de9b6" Margin="2,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Danh sách xe" FontSize="26" FontWeight="Bold" Foreground="#1976d2" Margin="0,0,0,18" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <TextBox x:Name="txtSearch" Width="220" Margin="0,0,10,0"/>
                        <ComboBox x:Name="cbBrand" Width="180" Margin="0,0,10,0"/>
                        <Button Content="Tìm kiếm" Width="100" Click="BtnSearch_Click"/>
                    </StackPanel>
                    <DataGrid x:Name="dgCars" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0" IsReadOnly="True" SelectionMode="Single" MinHeight="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên xe" Binding="{Binding CarModel}" Width="*"/>
                            <DataGridTextColumn Header="Biển số" Binding="{Binding LicensePlate}" Width="120"/>
                            <DataGridTextColumn Header="Hãng" Binding="{Binding Brand.BrandName}" Width="120"/>
                            <DataGridTextColumn Header="Số chỗ" Binding="{Binding Seats}" Width="60"/>
                            <DataGridTextColumn Header="Giá/ngày" Binding="{Binding PricePerDay}" Width="100"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                            <DataGridTemplateColumn Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Đặt xe" Click="BookCar_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window> 