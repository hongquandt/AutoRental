<Window x:Class="AutoRental.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AutoRental"
        Title="Đăng nhập" Height="340" Width="400" Background="#f4f6fb" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="16" Padding="32" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Width="280" HorizontalAlignment="Center">
                <TextBlock Text="Đăng nhập" FontSize="26" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,24" HorizontalAlignment="Center"/>
                <TextBlock Text="Email" Margin="0,0,0,4"/>
                <TextBox x:Name="txtEmail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="32" Margin="0,0,0,12" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9"/>
                <TextBlock Text="Mật khẩu" Margin="0,0,0,4"/>
                <PasswordBox x:Name="txtPassword" Height="32" Margin="0,0,0,20" Padding="8" BorderBrush="#b0bec5" BorderThickness="1" Background="#f9f9f9" KeyDown="txtPassword_KeyDown"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="12" Margin="0,0,0,10" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                    <Button x:Name="btnLogin" Content="Đăng nhập" Height="36" Width="120" Background="#1976d2" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnLogin_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnOpenRegister" Content="Đăng ký" Height="36" Width="120" Background="#43a047" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="btnOpenRegister_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window> 