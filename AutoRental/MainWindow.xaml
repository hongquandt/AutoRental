<Window x:Class="AutoRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoRental" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" Background="#f4f6fb" FontFamily="Segoe UI">
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="32" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="txtWelcome" FontSize="22" FontWeight="Bold" Foreground="#1976d2" Margin="0,0,0,24" HorizontalAlignment="Center"/>
                <Button x:Name="btnViewCars" Content="Xem danh sách xe" Width="200" Height="40" Margin="0,0,0,10" Background="#1976d2" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnViewCars_Click"/>
                <Button x:Name="btnBookingHistory" Content="Lịch sử đặt xe" Width="200" Height="40" Margin="0,0,0,20" Background="#43a047" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnBookingHistory_Click"/>
                <Button x:Name="btnLogout" Content="Đăng xuất" Width="120" Height="35" Background="#e53935" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnLogout_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
